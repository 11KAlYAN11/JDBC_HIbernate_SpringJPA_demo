<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>                             <!-- kalyantable is there in Employee db with kalyantable as table name in "postgreSQL" -->
    <class name="Customer" table="kalyantable"> <!-- employee table is there in pavan db with employee as table name in "mysql" -->
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="age" column="age" type="int"/>
    </class>
</hibernate-mapping>
